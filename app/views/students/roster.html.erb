<div class="col-md-6">
  <div class="row" style="height: 35px; background-color: #36ADAE; text-align: center;"><!-- fix border and text alignment -->
    <h4>Advised Students</h4>
  </div>
 
<table class = "table table-bordered">
  <thead>
    <tr>
      <th style="text-align: center; width: 200px;">ID Number</th>
      <th style="text-align: center; width: 300px;">Student Name</th>
      <th style="text-align: center; width: 300px;">Year & Course</th>
  </thead>


  <tbody>
    <% @students.each do |student| %>
      <td style="text-align: center;"><%= student.id_number %></td>
      <td style="text-align: center;"><%= student.name %></td>
      <td style="text-align: center;"><%= student.year_level %> <%= student.course %></td>
    </tr>
  </tbody>
  <% end %>
</table>
</div>

