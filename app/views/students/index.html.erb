<h1>Listing Students</h1>

<%= link_to "New Student", new_student_path %>
<p>

<table width = "100%">
  <!-- <thead> -->
    <tr>
      <th>Student Name</th>
     </tr>
  <!-- </thead> -->

  <!-- <tbody> -->
    <% @students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td><%= link_to "Show", student_path(student.id) %></td>
        <td><%= link_to "Edit", edit_student_path(student) %></td>
        <td><%= link_to "Destroy", student_path(student.id), :method => :delete, :data => { :confirm => "Are you sure?" } %> 
      </tr>
    <% end %>
<!--   </tbody> -->
</table>