<h1>Listing Students</h1>

<%= form_tag students_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>

<div class="col-md-2">
  <div class="row" style="height: 40px">
    <a class="btn btn-default" href="students/new" role="button" style='width: 150px;'>ADD STUDENT</a>
  </div>
  <div class="row" style="height: 40px">
    <a class="btn btn-default" href="students/delete" role="button" style='width: 150px;'>DELETE STUDENTS</a>
  </div>
  <div class="row" style="height: 40px">
    <a class="btn btn-default" href="students/select" role="button" style='width: 150px;'>SELECT STUDENTS</a>
  </div>
</div>

<p>
<%= flash[:notice] %>
<table class = "table table-striped">
  <thead>
    <tr>
      <th style="text-align: center;">Student Name</th>
      <th style="text-align: center;">ID Number</th>
      <th style="text-align: center;">Year Level</th>
      <th style="text-align: center;">Course</th>
      <th style="text-align: center;">Track</th>
      <th style="text-align: center;">Specialization</th>
     </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td style="text-align: center;"><%= student.name %></td>
        <td style="text-align: center;"><%= student.id_number %></td>
        <td style="text-align: center;"><%= student.year_level %></td>
        <td style="text-align: center;"><%= student.course %></td>
        <td style="text-align: center;"><%= student.track %></td>
        <td style="text-align: center;"><%= student.specialization %></td>
        <td style="text-align: center;"><%= link_to "Show", student_path(student.id) %></td>
        <td style="text-align: center;"><%= link_to "Edit", edit_student_path(student) %></td>
        <td style="text-align: center;"><%= link_to "Destroy", student_path(student.id), method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


