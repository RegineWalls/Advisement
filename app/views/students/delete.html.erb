<div class="col-md-13">
  <div class="row" style="height: 35px; background-color: #36ADAE; text-align: center;"><!-- fix border and text alignment -->
    <h4>Delete Students</h4>
  </div>
  <%= form_tag destroy_multiple_students_path, method: :delete do %>
  <table class = "table table-hover">
    <thead>
      <tr>
        <th style="text-align: center; width: 40px;"><input type="checkbox" id="selectAll" value="selectAll">
          <th style="text-align: center; width: 200px;">ID Number</th>
          <th style="text-align: center; width: 300px;">Student Name</th>
          <th style="text-align: center; width: 300px;">Year & Course</th>
          <th style="text-align: center;">Track / Specialization</th>
      </tr>
    </thead>
    <tbody>
      <% @students.each do |student| %>
      <tr>
        <td class="table-icon"><%= check_box_tag "ids[]", student.id %></td>
        <td style="text-align: center;"><%= student.id_number %></td>
        <td style="text-align: center;"><%= student.name %></td>
        <td style="text-align: center;"><%= student.year_level %> <%= student.course %></td>
        <td style="text-align: center;"><%= student.track %> / <%= student.specialization %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <center><%= submit_tag "Delete selected" %></center>
  <%end%>
  <%= link_to 'Back', students_path %>
</div>
