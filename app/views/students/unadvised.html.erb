<div class="col-md-13">
  <div class="row" style="height: 35px; background-color: #36ADAE; text-align: center;"><!-- fix border and text alignment -->
    <h4>Unadvised Students</h4>
  </div>
  <table class = "table table-hover">
    <thead>
      <tr>
        <th style="text-align: center; width: 150px;">ID Number</th>
        <th style="text-align: center; width: 600px;">Student Name</th>
        <th style="text-align: center; width: 200px;">Year & Course</th>
      </tr>
    </thead>
    <tbody>
      <% @students.each do |student| %>
      <tr  onclick="location.href='<%= student_path(student.id) %>'">
        <td style="text-align: center;"><%= student.id_number %></td>
        <td style="text-align: center;"><%= student.name %></td>
        <td style="text-align: center;"><%= student.year_level %> <%= student.course %></td>
      </tr>
    </tbody>
    <% end %>
  </table>
  <%= link_to 'Back', students_path %>
</div>