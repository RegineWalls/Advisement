<%= simple_nested_form_for(@track) do |f| %>

<div class="form-inputs">
    <!-- Code -->
    <%= f.input :track_code, :label => 'Track Code:', :placeholder => 'BI SPEC', :input_html => {:size => 15} %>
    <!-- Name -->
    <%= f.input :name, :label => 'Name:', :placeholder => 'Business Intelligence', :input_html => {:size => 30} %>
    <!-- Description -->
    <%= f.label :description, :label => 'Description:' %><br>
    <%= f.text_area :description, size: "60x5" %>
  <br>
  </div>

  <div class="form-actions">
    <br><%= f.button :submit %>
  </div>

  <% end %>
  <br>

<h3>Import Tracks</h3>
<%= form_tag import_tracks_path, multipart: true do %>  
  <%= file_field_tag :file %>
  <br> 
  <%= submit_tag "Import" %>  
<% end %>

<br>
<br>
<%= link_to "Back to Home", root_path %>
