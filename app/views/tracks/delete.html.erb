<div class="col-md-13">
  <div class="row" style="height: 35px; background-color: #36ADAE; text-align: center;"><!-- fix border and text alignment -->
    <h4>Delete Tracks</h4>
  </div>
  <%= form_tag destroy_multiple_tracks_path, method: :delete do %>
  <table class = "table table-hover">
    <thead>
      <tr>
        <th style="text-align: center; width: 30px;">
          <input type="checkbox" id="selectAll" value="selectAll"></input>
        </th>
        <th style="text-align: center; width: 200px;">Track Name</th>
        <th style="text-align: center; width: 300px;">Description</th>
      </tr>
    </thead>
    <tbody>
      <% @tracks.each do |track| %>
      <tr>
        <td class="table-icon"><%= check_box_tag "ids[]", track.id %></td>
        <td style="text-align: center;"><%= track.name %></td>
        <td style="text-align: center;"><%= track.description %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <center><%= submit_tag "Delete selected" %></center>
  <%end%>
</div>
<br><center><%= link_to 'Back', tracks_path %></center>
